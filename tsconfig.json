{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "./",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "typeRoots": ["./types", "./node_modules/@types"]
    },
    "exclude": ["node_modules", "dist"]
} 